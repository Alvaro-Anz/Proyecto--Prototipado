            if 1 <= op <= len(semestres):
                sem_sel = semestres[op-1]
                cursos_sem = list(self.cursos[sem_sel].keys())
                print(f"\nCursos en {sem_sel}:")
                for i, curso in enumerate(cursos_sem, 1):
                    print(f"{i}) {curso}")
                op2 = int(input("\nSeleccione el curso para ver docentes (0 para volver): "))
                if op2 == 0:
