    # -------------------- FACULTADES y CARRERAS --------------------
    def mostrar_facultades(self):
        print("\nListado de Facultades:")
        facultades = list(self.facultades.keys())
        for i, fac in enumerate(facultades, 1):
            print(f"{i}) {fac}")
        try:
            op = int(input("\nSeleccione el número de la facultad que desea explorar (0 para volver): "))
            if op == 0:
                return
            if 1 <= op <= len(facultades):
                fac_sel = facultades[op-1]
                self.mostrar_carreras(fac_sel)
            else:
                print("Opción no válida.")
        except ValueError:
            print("Entrada no válida. Debe ingresar un número.")

    def mostrar_carreras(self, facultad):
        info_fac = self.facultades[facultad]
        print("\n" + "-"*78)
        print(f"FACULTAD: {facultad}")
        print(f"Decano: {info_fac['decano']}")
        print("Carreras disponibles:")
        for num, carrera in info_fac["carreras"].items():
            print(f"{num}) {carrera['nombre']}")
        try:
            op = int(input("\nSeleccione el número de la carrera para ver más (0 para volver): "))
            if op == 0:
                return
            carreras = info_fac["carreras"]
            if op in carreras:
                c = carreras[op]
                print("\n" + "-"*78)
                print(f"Carrera: {c['nombre']}")
                print(f"Director de Carrera: {c['director']}")
                print(f"Decano: {info_fac['decano']}")
                print("\nDescripción:")
                self._print_wrapped(c['descripcion'])
                # valoración simulada sobre la carrera
                valor = self._simular_valoracion()
                print(f"\nValoración simulada de la carrera (estudiantes/opiniones): {valor} / 5.00")
                print("-"*78)
            else:
                print("Opción no válida.")
        except ValueError:
            print("Entrada no válida. Debe ingresar un número.")

