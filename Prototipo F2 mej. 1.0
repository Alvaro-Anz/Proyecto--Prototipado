    # -------------------- UTILIDADES --------------------
    def _print_wrapped(self, text, width=78):
        print(textwrap.fill(text, width=width))

    def _simular_valoracion(self):
        """Genera una valoración simulada (float 3.0 - 5.0)."""
        return round(random.uniform(3.0, 5.0), 2)

    def _get_docente_bio(self, nombre):
        """Devuelve una bio si existe o genera una breve bio simulada."""
        if nombre in self.docente_bios:
            return self.docente_bios[nombre]
        # generar una bio breve simulada
        partes = nombre.split(",")[0].strip()
        bio = f"{partes}: docente con experiencia académica y práctica en su área."
        # guardamos para futuras consultas
        self.docente_bios[nombre] = bio
        return bio

